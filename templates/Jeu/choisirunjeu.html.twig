<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page avec mise en page</title>
    <link rel="stylesheet" href="{{ asset('styles/choisirunjeu.css') }}">
</head>
<body>
    <div class="search-container">
        <button id="space_invaders">Space Invaders</button>
        <button id="tetris">Tetris</button>
        <button id="casse_brique">Casse-Brique</button>
        <button id="flappy_bird">Flappy Bird</button>
    </div>
    <div class="container">
        <div class="row">
            <!-- Colonne de gauche -->
            <div class="column">
                <div class="game-container">
                    <h3 class="rectangle-title">Le top des jeux</h3>
                </div>
            </div>
            <!-- Colonne du milieu -->
            <div class="column">
                <div class="game-container">
                    <!-- Intégration du jeu dans le rectangle central -->
                    <iframe id="frameSpaceInvaders" width="100%" height="100%" style="display: none;" allowfullscreen></iframe>
                    <iframe src="" id="frameTetris" width="100%" height="100%" style="display: none;" allowfullscreen></iframe>
                    <iframe src="" id="frameCasseBrique" width="100%" height="100%" style="display: none;" allowfullscreen></iframe>
                    <iframe src="" id="frameFlappyBird" width="100%" height="100%" style="display: none;" allowfullscreen></iframe>
                </div>
            </div>
            <!-- Colonne de droite -->
            <div class="column right-column">
                <div class="small-rectangle">
                    <h3 class="rectangle-title">L'association du mois</h3>
                </div>
                <div class="small-rectangle">
                    <h3 class="rectangle-title">Le top des annonceurs</h3>
                </div>
            </div>
        </div>
        <!-- Pied de page -->
        <footer>
            <button>Inscription Particulier</button>
            <button>Inscription Association</button>
            <button>Inscription Mécène</button>
        </footer>
    </div>
    <script>
        // Script JavaScript pour le choix et l'affichage du jeu
        document.getElementById('space_invaders').addEventListener('click', function() {
            document.getElementById('frameSpaceInvaders').style.display = 'block';
            document.getElementById('frameTetris').style.display = 'none';
            document.getElementById('frameFlappyBird').style.display = 'none';
            document.getElementById('frameCasseBrique').style.display = 'none';
            document.getElementById('frameSpaceInvaders').src = "{{ path('app_space_invaders') }}";
        });

        document.getElementById('tetris').addEventListener('click', function() {
            document.getElementById('frameTetris').style.display = 'block';
            document.getElementById('frameSpaceInvaders').style.display = 'none';
            document.getElementById('frameFlappyBird').style.display = 'none';
            document.getElementById('frameCasseBrique').style.display = 'none';
            document.getElementById('frameTetris').src = "";
        });

        document.getElementById('flappy_bird').addEventListener('click', function() {
            document.getElementById('frameFlappyBird').style.display = 'block';
            document.getElementById('frameSpaceInvaders').style.display = 'none';
            document.getElementById('frameTetris').style.display = 'none';
            document.getElementById('frameCasseBrique').style.display = 'none';
            document.getElementById('frameFlappyBird').src = "";
        });

        document.getElementById('casse_brique').addEventListener('click', function() {
            document.getElementById('frameCasseBrique').style.display = 'block';
            document.getElementById('frameSpaceInvaders').style.display = 'none';
            document.getElementById('frameFlappyBird').style.display = 'none';
            document.getElementById('frameTetris').style.display = 'none';
            document.getElementById('frameCasseBrique').src = "";
        });
    </script>
</body>
</html>
