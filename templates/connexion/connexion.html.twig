{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset("styles/login.css")}}">
    <style>
    .forgot-password {
        text-align: center; /* Centrer le texte */
        margin-top: 20px; /* Espacement supérieur */
    }

    .forgot-password a {
        color: #007bff; /* Couleur du lien */
        text-decoration: none; /* Supprime le soulignement par défaut */
        font-weight: bold; /* Met le texte en gras */
        transition: color 0.3s, text-decoration 0.3s; /* Ajoute une transition pour les effets */
    }

    .forgot-password a:hover {
        color: #0056b3; /* Change la couleur au survol */
        text-decoration: underline; /* Ajoute un soulignement au survol */
    }

    .forgot-password a:focus {
        outline: none; /* Supprime le contour par défaut */
        color: #0056b3; /* Change la couleur au focus */
        text-decoration: underline; /* Ajoute un soulignement au focus */
    }
</style>
{% endblock %}

{% block title %}Connexion - Yabonlapub{% endblock %}

{% block body %}
<div class="content">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        <h3>Se connecter</h3>

        <table>
            <tr>
                <td class="titre">
                <label><strong>Identifiant</strong></label>
                </td>
                <td class="value">
                <input type="text" name="login" id="inputLogin" class="form-control" autocomplete="username" required placeholder="Identifiant">
                </td>
            </tr>

            <tr>
                <td class="titre">
                <label><strong>Mot de passe</strong></label>
                </td>
                <td class="value">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
                </td>
            </tr>
        </table>

        <div class="forgot-password">
            <a href="{{ path("choixReinitialisation") }}">Mot de passe oublié ?</a>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="login" type="submit" onclick="{{ path("app_accueil") }}">Se connecter</button>
        <button class="register" onclick="window.location.href='{{ path("inscription") }}'">Vous ne possédez pas de compte ? Inscrivez-vous</button>
    </form>
</div>


{% endblock %}




