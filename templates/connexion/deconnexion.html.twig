{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset("styles/login.css")}}">
{% endblock %}

{% block title %}Déconnexion - Yabonlapub{% endblock %}

{% block body %}
<div class="content">
    <form method="post">
        <h3>Se déconnecter</h3>

        <p>Vous êtes connecté en tant que {{ typeCompte }} : {{ app.user.login }}</p>

        <a href="{{ path("app_modif_user") }}"><button class="register">Consulter mes informations</button></a>
        <a href="{{ path("app_logout") }}"><button class="login">Me déconnecter</button></a>
    </form>
</div>
{% endblock %}